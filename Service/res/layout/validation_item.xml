<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp" >
    
    <ImageView 
        android:id="@+id/val_imageItem"
	    android:layout_margin="5dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true" />
    
    <LinearLayout 
        android:id="@+id/val_msg"
	    android:layout_margin="5dp"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_toRightOf="@+id/val_imageItem"
	    android:layout_toLeftOf="@+id/val_selection"
	    android:orientation="vertical" >
        <TextView 
            android:id="@+id/val_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#3300ff" />
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="请求添加您为"
	            android:textSize="16sp"
	            android:textColor="#00ff99" />
	        <TextView 
	            android:id="@+id/kind"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#00ff99"
	            android:textSize="17sp" />
	    </LinearLayout>
        <TextView 
            android:id="@+id/val_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/val_selection"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:orientation="vertical" >
	    <Button 
	        android:id="@+id/val_agree"
	        android:layout_width="wrap_content"
	        android:layout_height="35dp"
	        android:layout_margin="5dp"
	        android:text="同意"
	        android:textSize="16sp" />
	    
	    <Button 
	        android:id="@+id/val_reject"
	        android:layout_width="wrap_content"
	        android:layout_height="35dp"
	        android:layout_margin="5dp"
	        android:text="拒绝"
	        android:textSize="16sp" />
    </LinearLayout>
    
</RelativeLayout>
